# Environment Configuration Templates
# Copy the appropriate template and rename to .env.[environment]

## Available Environment Files:
# .env.development  - Local development
# .env.staging      - Staging/testing environment  
# .env.production   - Production environment

# Firebase Configuration
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456
FIREBASE_MEASUREMENT_ID=G-ABCDEF1234

# API Configuration
BRAILLE_API_URL=https://api.gnos-braille.com
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEBUG_LOGGING=false
ENABLE_OFFLINE_MODE=true
ENABLE_VOICE_FEEDBACK=true
ENABLE_HAPTIC_FEEDBACK=true

# Security Settings
MAX_TRANSLATION_LENGTH=10000
MAX_EXPORT_SIZE=50000000
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
MAX_TRANSLATIONS_PER_HOUR=1000
MAX_EXPORTS_PER_DAY=50

# Cache Settings
CACHE_TTL=300000
MAX_CACHE_SIZE=100000000
ENABLE_DISK_CACHE=true

# Accessibility Settings
DEFAULT_FONT_SIZE=16
MAX_FONT_SIZE=32
MIN_FONT_SIZE=12
DEFAULT_CONTRAST_RATIO=7
SCREEN_READER_TIMEOUT=5000

# Braille Translation Settings
DEFAULT_BRAILLE_GRADE=2
SUPPORT_GRADE_1=true
SUPPORT_GRADE_2=true
SUPPORT_GRADE_3=false
MAX_BRAILLE_CELLS_PER_LINE=40

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=0.8
OCR_MAX_IMAGE_SIZE=10000000
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,pdf,tiff

# Storage Settings
MAX_USER_STORAGE=1000000000
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Notifications
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
NOTIFICATION_SOUND_ENABLED=true

# Development Settings (only for dev/staging)
ENABLE_DEBUG_PANEL=false
SHOW_PERFORMANCE_OVERLAY=false
ENABLE_INSPECTOR=false
