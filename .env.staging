# Staging Environment Configuration
# Gnos Braille System - Staging/Testing Settings

# Firebase Staging Configuration
FIREBASE_API_KEY_DEV=${FIREBASE_API_KEY_DEV}
FIREBASE_AUTH_DOMAIN_DEV=${FIREBASE_AUTH_DOMAIN_DEV}
FIREBASE_PROJECT_ID_DEV=${FIREBASE_PROJECT_ID_DEV}
FIREBASE_STORAGE_BUCKET_DEV=${FIREBASE_STORAGE_BUCKET_DEV}
FIREBASE_MESSAGING_SENDER_ID_DEV=${FIREBASE_MESSAGING_SENDER_ID_DEV}
FIREBASE_APP_ID_DEV=${FIREBASE_APP_ID_DEV}
FIREBASE_MEASUREMENT_ID_DEV=${FIREBASE_MEASUREMENT_ID_DEV}

# API Configuration
BRAILLE_API_URL_DEV=${BRAILLE_API_URL_DEV}
API_TIMEOUT_DEV=30000
API_RETRY_ATTEMPTS_DEV=3
API_RETRY_DELAY_DEV=1000

# Feature Flags (Staging)
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEBUG_LOGGING=true
ENABLE_OFFLINE_MODE=true
ENABLE_VOICE_FEEDBACK=true
ENABLE_HAPTIC_FEEDBACK=true

# Security Settings (Staging)
MAX_TRANSLATION_LENGTH=10000
MAX_EXPORT_SIZE=50000000
SESSION_TIMEOUT=1800000
MAX_LOGIN_ATTEMPTS=10
PASSWORD_MIN_LENGTH=6
ENFORCE_2FA=false

# Rate Limiting (Staging)
MAX_REQUESTS_PER_MINUTE=200
MAX_TRANSLATIONS_PER_HOUR=2000
MAX_EXPORTS_PER_DAY=100

# Cache Settings (Staging)
CACHE_TTL=180000
MAX_CACHE_SIZE=50000000
ENABLE_DISK_CACHE=true

# Accessibility Settings
DEFAULT_FONT_SIZE=16
MAX_FONT_SIZE=32
MIN_FONT_SIZE=12
DEFAULT_CONTRAST_RATIO=7
SCREEN_READER_TIMEOUT=5000

# Braille Translation Settings
DEFAULT_BRAILLE_GRADE=2
SUPPORT_GRADE_1=true
SUPPORT_GRADE_2=true
SUPPORT_GRADE_3=true
MAX_BRAILLE_CELLS_PER_LINE=40

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=0.7
OCR_MAX_IMAGE_SIZE=10000000
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,pdf,tiff

# Storage Settings
MAX_USER_STORAGE=500000000
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# Notifications
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
NOTIFICATION_SOUND_ENABLED=true

# Staging-specific
ENVIRONMENT=staging
LOG_LEVEL=debug
SENTRY_DSN=${SENTRY_DSN_DEV}
CDN_URL=https://staging-cdn.gnos-braille.com
SUPPORT_EMAIL=staging-support@gnos-braille.com
PRIVACY_POLICY_URL=https://staging.gnos-braille.com/privacy
TERMS_OF_SERVICE_URL=https://staging.gnos-braille.com/terms

# Debug Features (Staging only)
ENABLE_DEBUG_PANEL=true
SHOW_PERFORMANCE_OVERLAY=false
ENABLE_INSPECTOR=true
