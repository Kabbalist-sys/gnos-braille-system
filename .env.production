# Production Environment Variables
# Gnos Braille System - Production Configuration

# Firebase Production Configuration
# These values should match your GitHub secrets
FIREBASE_API_KEY_PROD=${FIREBASE_API_KEY_PROD}
FIREBASE_AUTH_DOMAIN_PROD=${FIREBASE_AUTH_DOMAIN_PROD}
FIREBASE_PROJECT_ID_PROD=${FIREBASE_PROJECT_ID_PROD}
FIREBASE_STORAGE_BUCKET_PROD=${FIREBASE_STORAGE_BUCKET_PROD}
FIREBASE_MESSAGING_SENDER_ID_PROD=${FIREBASE_MESSAGING_SENDER_ID_PROD}
FIREBASE_APP_ID_PROD=${FIREBASE_APP_ID_PROD}
FIREBASE_MEASUREMENT_ID_PROD=${FIREBASE_MEASUREMENT_ID_PROD}

# API Configuration
BRAILLE_API_URL_PROD=${BRAILLE_API_URL_PROD}
API_TIMEOUT_PROD=30000
API_RETRY_ATTEMPTS_PROD=3
API_RETRY_DELAY_PROD=1000

# Feature Flags (Production)
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEBUG_LOGGING=false
ENABLE_OFFLINE_MODE=true
ENABLE_VOICE_FEEDBACK=true
ENABLE_HAPTIC_FEEDBACK=true

# Security Settings (Production)
MAX_TRANSLATION_LENGTH=10000
MAX_EXPORT_SIZE=50000000
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8
ENFORCE_2FA=true

# Rate Limiting (Production)
MAX_REQUESTS_PER_MINUTE=100
MAX_TRANSLATIONS_PER_HOUR=1000
MAX_EXPORTS_PER_DAY=50

# Cache Settings (Production)
CACHE_TTL=300000
MAX_CACHE_SIZE=100000000
ENABLE_DISK_CACHE=true

# Accessibility Settings
DEFAULT_FONT_SIZE=16
MAX_FONT_SIZE=32
MIN_FONT_SIZE=12
DEFAULT_CONTRAST_RATIO=7
SCREEN_READER_TIMEOUT=5000

# Braille Translation Settings
DEFAULT_BRAILLE_GRADE=2
SUPPORT_GRADE_1=true
SUPPORT_GRADE_2=true
SUPPORT_GRADE_3=false
MAX_BRAILLE_CELLS_PER_LINE=40

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=0.85
OCR_MAX_IMAGE_SIZE=10000000
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,pdf,tiff

# Storage Settings
MAX_USER_STORAGE=1000000000
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Notifications
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
NOTIFICATION_SOUND_ENABLED=true

# Production-specific
ENVIRONMENT=production
LOG_LEVEL=error
SENTRY_DSN=${SENTRY_DSN}
CDN_URL=https://cdn.gnos-braille.com
SUPPORT_EMAIL=support@gnos-braille.com
PRIVACY_POLICY_URL=https://gnos-braille.com/privacy
TERMS_OF_SERVICE_URL=https://gnos-braille.com/terms
